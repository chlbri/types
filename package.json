{
  "name": "@bemedev/types",
  "version": "0.1.2",
  "description": "https://github.com/chlbri/types.git",
  "author": "chlbri <bri_lvi@icloud.com>",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "config": "pnpm install",
    "config:off": "pnpm run config --offline",
    "ci": "pnpm run config:off && pnpm run lint && pnpm run build && pnpm run test:coverage && pnpm run build",
    "ci:admin": "pnpm run rm && pnpm run ci",
    "rollup": "rollup -c",
    "build": "pnpm rm:lib && pnpm run rollup",
    "p-q": "pretty-quick --staged",
    "rm": "rm -rf node_modules pnpm-lock.yaml",
    "rinit": "pnpm run rm && pnpm run config",
    "rinit:off": "pnpm run rm && pnpm run config:off",
    "test": "pnpm run test:coverage --no-coverage",
    "post:test": "vitest run -c vitest.post.config.ts",
    "test:coverage": "vitest run",
    "test:watch": "vitest",
    "rm:lib": "rm -rf lib",
    "clean": "pnpm run remove && pnpm run config",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "lint-watch": "onchange --await-write-finish 5500 \"**/*\" -- pnpm run lint",
    "prepublishOnly": "",
    "prepare": "husky"
  },
  "devDependencies": {
    "@bemedev/fsf": "^0.7.3",
    "@bemedev/types": "link:",
    "@bemedev/vitest-alias": "^0.0.3",
    "@bemedev/vitest-exclude": "^0.0.2",
    "@bemedev/vitest-extended": "^0.4.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.11.1",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.0",
    "@types/rollup-plugin-peer-deps-external": "^2.2.5",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^9.11.1",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "onchange": "^7.1.0",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "promisify-child-process": "^4.1.2",
    "rollup": "^4.22.4",
    "rollup-plugin-node-externals": "^7.1.3",
    "rollup-plugin-tsc-alias": "^1.1.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "vitest": "2.1.1"
  },
  "repository": {
    "url": "https://github.com/chlbri/types.git",
    "type": "git"
  }
}
